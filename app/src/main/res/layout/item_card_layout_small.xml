<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview1"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    card_view:contentPadding="2dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/itemCardPromotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/itemCardImage"
            android:layout_marginTop="10dp"
            android:background="@drawable/red_circle"
            android:padding="5dp"
            android:text="100%"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/itemCardImage"
            android:layout_width="fill_parent"
            android:layout_height="165dp"
            android:layout_margin="7dp"
            android:src="@drawable/ic_photo_black_24dp" />

        <TextView
            android:id="@+id/itemCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemCardImage"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:lines="1"
            android:maxLines="2"
            android:text="Title"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/discountedCardPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemCardTitle"
            android:layout_alignStart="@+id/txtTitle"
            android:layout_alignLeft="@+id/txtTitle"
            android:layout_marginLeft="15dp"
            android:text="discounted Price"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemCardPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/discountedCardPrice"
            android:layout_marginLeft="15dp"
            android:text="Orig Price"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/itemCardSeller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemCardPrice"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:text="Seller" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
